{
  "name": "react-reflow",
  "version": "0.4.11",
  "description": "State container for React apps",
  "scripts": {
    "build": "rimraf lib && npm run build:declaration && npm run build:umd",
    "build:declaration": "tsc --project tsconfig.d.json && rimraf declaration-rest",
    "build:umd": "webpack src/index.ts lib/reflow.js",
    "test": "jest test/*.tsx",
    "jest": "jest test/getState.tsx"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^16.0.3",
    "@types/react": "^15.0.0",
    "enzyme": "^2.7.0",
    "jest": "^18.1.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.4",
    "rxjs": "^5.0.3",
    "ts-jest": "^18.0.1",
    "ts-loader": "^1.3.3",
    "typescript": "^2.1.5",
    "webpack": "^1.14.0"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "rxjs": "^5.0.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamssen/react-reflow.git"
  },
  "bugs": {
    "url": "https://github.com/iamssen/react-reflow/issues"
  },
  "homepage": "https://github.com/iamssen/react-reflow",
  "main": "lib/reflow.js",
  "typings": "lib/index.d.ts",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(ts|tsx|js)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {}
}
