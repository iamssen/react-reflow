{
  "name": "react-reflow",
  "version": "0.6.2",
  "description": "State container for React apps",
  "scripts": {
    "build": "rimraf lib && npm run build:declaration && npm run build:umd",
    "build:declaration": "tsc --project tsconfig.d.json && rimraf declaration-rest",
    "build:umd": "webpack src/index.ts lib/reflow.js",
    "test": "jest",
    "jest": "jest test/ContextLinker.ts*"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "@types/jsdom": "^2.0.30",
    "@types/react": "^15.0.16",
    "enzyme": "^2.7.1",
    "jest": "^19.0.2",
    "jsdom": "^9.12.0",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.6.1",
    "rxjs": "^5.2.0",
    "ts-jest": "^19.0.1",
    "ts-loader": "^1.3.3",
    "typescript": "^2.2.1",
    "webpack": "^1.14.0"
  },
  "peerDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rxjs": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamssen/react-reflow.git"
  },
  "bugs": {
    "url": "https://github.com/iamssen/react-reflow/issues"
  },
  "homepage": "https://github.com/iamssen/react-reflow",
  "main": "lib/reflow.js",
  "typings": "lib/index.d.ts",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/*.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
